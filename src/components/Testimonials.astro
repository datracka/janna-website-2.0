---
import { getCurrentLanguage, getTranslations } from '../i18n/utils';

const currentLanguage = getCurrentLanguage(Astro.url.pathname);
const t = getTranslations(currentLanguage);

// Sample testimonials - these can be replaced with real ones later
const testimonials = [
  {
    text: "Janna es una profesora excepcional. Su método de enseñanza me ayudó a aprobar el examen Goethe B2 en pocos meses.",
    author: "M. García",
    role: "Estudiante individual"
  },
  {
    text: "Excellent teacher! The corporate German classes have really improved our team's communication with German clients.",
    author: "Sarah K.",
    role: "Corporate Client"
  },
  {
    text: "Die Deutschstunden mit Janna sind immer gut strukturiert und motivierend. Sehr empfehlenswert!",
    author: "L. Rodríguez",
    role: "Private Student"
  }
];
---

<section id="testimonials" class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        {t.testimonials.title}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div class="bg-gray-50 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
          <div class="mb-4">
            <svg class="w-8 h-8 text-blue-600 mb-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
            </svg>
          </div>
          
          <blockquote class="text-gray-700 mb-4 italic">
            "{testimonial.text}"
          </blockquote>
          
          <div class="border-t pt-4">
            <p class="font-medium text-gray-900">{testimonial.author}</p>
            <p class="text-sm text-gray-600">{testimonial.role}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Optional: Add more testimonials button -->
    <div class="text-center mt-12">
      <p class="text-gray-600">
        ¿Quieres compartir tu experiencia? 
        <a href="#contact" class="text-blue-600 hover:text-blue-700 font-medium">
          Contáctanos
        </a>
      </p>
    </div>
  </div>
</section>
