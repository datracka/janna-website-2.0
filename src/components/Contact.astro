---
import { getCurrentLanguage, getTranslations } from '../i18n/utils';

const currentLanguage = getCurrentLanguage(Astro.url.pathname);
const t = getTranslations(currentLanguage);
---

<section id="contact" class="py-16 bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        {t.contact.title}
      </h2>
      <p class="text-lg text-gray-600">
        {currentLanguage === 'es' && '¿Listo para comenzar tu viaje con el alemán? ¡Contáctame!'}
        {currentLanguage === 'en' && 'Ready to start your German learning journey? Contact me!'}
        {currentLanguage === 'de' && 'Bereit, Ihre Deutschlern-Reise zu beginnen? Kontaktieren Sie mich!'}
      </p>
    </div>

    <!-- Contact Information - Centered Layout -->
    <div class="bg-white rounded-lg p-8 shadow-sm max-w-2xl mx-auto">
      <div class="space-y-8">
        <!-- Email -->
        <div class="text-center">
          <div class="flex justify-center mb-4">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">{t.contact.email}</h3>
          <a 
            href="mailto:janna.ziesemer@googlemail.com" 
            class="text-lg text-blue-600 hover:text-blue-700 font-medium break-all"
          >
            janna.ziesemer@googlemail.com
          </a>
          <p class="text-sm text-gray-500 mt-2">
            {currentLanguage === 'es' && 'Copia este email y envíame un mensaje'}
            {currentLanguage === 'en' && 'Copy this email and send me a message'}
            {currentLanguage === 'de' && 'Kopieren Sie diese E-Mail und senden Sie mir eine Nachricht'}
          </p>
        </div>

        <!-- Divider -->
        <div class="border-t border-gray-200"></div>

        <!-- LinkedIn -->
        <div class="text-center">
          <div class="flex justify-center mb-4">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </div>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">LinkedIn</h3>
          <a 
            href="https://www.linkedin.com/in/janna-ziesemer-3073415b/" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-lg text-blue-600 hover:text-blue-700 font-medium"
          >
            {currentLanguage === 'es' && 'Conecta conmigo en LinkedIn'}
            {currentLanguage === 'en' && 'Connect with me on LinkedIn'}
            {currentLanguage === 'de' && 'Mit mir auf LinkedIn vernetzen'}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
          <p class="text-sm text-gray-500 mt-2">
            {currentLanguage === 'es' && 'También puedes encontrarme en mi perfil profesional'}
            {currentLanguage === 'en' && 'You can also find me on my professional profile'}
            {currentLanguage === 'de' && 'Sie können mich auch in meinem beruflichen Profil finden'}
          </p>
        </div>

        <!-- Additional Contact Info -->
        <div class="border-t border-gray-200 pt-6">
          <div class="text-center text-sm text-gray-600 space-y-2">
            <p>
              <strong>
                {currentLanguage === 'es' && 'Área de servicio:'}
                {currentLanguage === 'en' && 'Service area:'}
                {currentLanguage === 'de' && 'Servicebereich:'}
              </strong>
              <br />
              {t.contact.location}
            </p>
            <p class="text-blue-600 font-medium">{t.contact.online}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
