---
import { getCurrentLanguage, getTranslations } from '../i18n/utils';

const currentLanguage = getCurrentLanguage(Astro.url.pathname);
const t = getTranslations(currentLanguage);
---

<section id="about" class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        {t.about.title}
      </h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div>
        <p class="text-lg text-gray-700 mb-6 leading-relaxed">
          {t.about.description}
        </p>
        
        <!-- Qualifications/Experience Highlights -->
        <div class="space-y-4">
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-2 h-2 bg-blue-600 rounded-full mt-2"></div>
            <p class="text-gray-700">{t.about.qualifications.experience}</p>
          </div>
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-2 h-2 bg-blue-600 rounded-full mt-2"></div>
            <p class="text-gray-700">{t.about.qualifications.certifications}</p>
          </div>
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-2 h-2 bg-blue-600 rounded-full mt-2"></div>
            <p class="text-gray-700">{t.about.qualifications.specialization}</p>
          </div>
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0 w-2 h-2 bg-blue-600 rounded-full mt-2"></div>
            <p class="text-gray-700">{t.about.qualifications.examPrep}</p>
          </div>
        </div>
      </div>

      <!-- Timeline/Qualifications Visual -->
      <div class="bg-gray-50 rounded-lg p-8">
        <h3 class="text-xl font-semibold text-gray-900 mb-6">{t.about.qualifications.title}</h3>
        
        <div class="space-y-6">
          <div class="border-l-2 border-blue-600 pl-4">
            <h4 class="font-medium text-gray-900">{t.about.qualifications.cert1Title}</h4>
            <p class="text-sm text-gray-600">{t.about.qualifications.cert1Desc}</p>
          </div>
          
          <div class="border-l-2 border-blue-600 pl-4">
            <h4 class="font-medium text-gray-900">{t.about.qualifications.cert2Title}</h4>
            <p class="text-sm text-gray-600">{t.about.qualifications.cert2Desc}</p>
          </div>
          
          <div class="border-l-2 border-blue-600 pl-4">
            <h4 class="font-medium text-gray-900">{t.about.qualifications.cert3Title}</h4>
            <p class="text-sm text-gray-600">{t.about.qualifications.cert3Desc}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
