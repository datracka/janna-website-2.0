---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getTranslations, getCurrentLanguage } from '../i18n/utils';

const lang = getCurrentLanguage(Astro.url.pathname);
const t = getTranslations(lang);
---

<Layout title={`${t.imprint.title} - Janna Ziesemer`}>
  <Header />
  <main class="pt-24 pb-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-8">{t.imprint.title}</h1>
      
      <div class="prose prose-lg max-w-none">
        <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">{t.imprint.infoAccording}</h2>
        <div class="text-gray-700 mb-6">
          <p><strong>{t.imprint.name}</strong></p>
          <p>{t.imprint.address.street}</p>
          <p>{t.imprint.address.city}</p>
          <p>{t.imprint.address.region} ({t.imprint.address.country})</p>
        </div>
        
        <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">{t.imprint.contact}</h2>
        <div class="text-gray-700 mb-6">
          <p><strong>{t.imprint.phone}:</strong> {t.imprint.phoneNumber}</p>
          <p><strong>{t.imprint.email}:</strong> 
            <a href={`mailto:${t.imprint.emailAddress}`} class="text-blue-600 hover:text-blue-700">
              {t.imprint.emailAddress}
            </a>
          </p>
        </div>
        
        <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">{t.imprint.contentLiability}</h2>
        <p class="text-gray-700 mb-6">
          {t.imprint.contentLiabilityText}
        </p>
        
        <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">{t.imprint.linkLiability}</h2>
        <p class="text-gray-700">
          {t.imprint.linkLiabilityText}
        </p>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
